<div class="profile">
  <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle", size: "100x100"  %>
  <div class="user_info user_name"><strong><%= @user.name%></strong></div>
  <div class="user_info"><%= @user.description%></div>
  <div class="user_info"><%= @users_gym.gym_name%></div>
</div>
<% if current_user != @user %>
  <% if current_user.following?(@user) %>
    <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn btn-success" %>
  <% end %>
<% end %>
<%= render '/layouts/timeline', training_records: @training_records, user: @user %>