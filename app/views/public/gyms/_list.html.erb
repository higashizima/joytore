<table class="table">
  <thead>
    <tr>
      <th>店舗名</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>月額</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% gyms.each do |gym| %>
    <tr>
      <td><%= gym.gym_name %></td>
      <td><%= gym.postcode %></td>
      <td><%= gym.address %></td>
      <td>￥<%= gym.fee.to_s(:delimited) %></td>
      <td>
        <div id="favorite_btn_<%= gym.id %>">
          <%= render 'public/favorite_gyms/favorite_btn', gym: gym %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>