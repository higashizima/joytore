<% if @favorite_gym.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@favorite_gym.errors.count, "error") %> prohibited this author from being saved:</h2>
    <ul>
      <% @favorite_gym.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>店舗名</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>月額</th>
    </tr>
  </thead>
  <tbody>
    <% @gyms.each do |gym| %>
    <tr>
      <td><%= gym.gym_name %></td>
      <td><%= gym.postcode %></td>
      <td><%= gym.address %></td>
      <td><%= gym.fee %></td>
      <td><div>
          <% if gym.favorited_by?(current_user) %>
          <p>
            <%= link_to gym_favorite_gyms_path(gym.id), method: :delete do %>
              お気に入り登録済
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to gym_favorite_gyms_path(gym.id), method: :post do %>
             お気に入り登録
            <% end %>
          </p>
        <% end %>
      </div>
      </td>
    </tr>
<% end %>
  </tbody>
</table>